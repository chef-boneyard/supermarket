production:
  <% if @app['database']['host'] || node['supermarket']['database']['host'] %>
  host: <%= @app['database']['host'] || node['supermarket']['database']['host'] %>
  <% end %>
  <% if @app['database']['port'] || node['supermarket']['database']['port'] %>
  port: <%= @app['database']['port'] || node['supermarket']['database']['port'] %>
  <% end %>
  username: <%= @app['database']['user'] || node['supermarket']['database']['user'] %>
