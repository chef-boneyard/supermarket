  password: <%= @app['database']['password'] || node['supermarket']['database']['password'] %>
  <% end %>
  adapter: postgresql
  database: <%= @app['database']['name'] || node['supermarket']['database']['name'] %>
  pool: <%= @app['database']['pool'] || node['supermarket']['database']['pool'] %>
